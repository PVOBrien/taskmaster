<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pvobrien.github.taskmaster"
    >

    <uses-permission android:name="android.permission.WAKE_LOCK" /> // Added for AWS amplify
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> // Added for AWS amplify

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Taskmaster">
        <activity android:name=".RecyclerViewGeneric"></activity>
        <activity android:name=".Settings" />
        <activity android:name=".TaskDetail" />
        <activity android:name=".AllTasks" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddTask" />
    </application>

</manifest>

